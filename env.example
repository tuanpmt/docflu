# Confluence Configuration
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-email@domain.com
CONFLUENCE_API_TOKEN=your-api-token
CONFLUENCE_SPACE_KEY=DOC
CONFLUENCE_ROOT_PAGE_TITLE=Documentation
# Use Mermaid Cloud plugin instead of converting to SVG images (requires plugin installation)
CONFLUENCE_USE_MERMAID_PLUGIN=false
# Mermaid plugin macro name (varies by plugin: 'mermaid', 'mermaid-cloud', 'mermaid-diagram')
CONFLUENCE_MERMAID_PLUGIN_NAME=mermaid

# Google Docs Configuration (OAuth2 with PKCE)
GOOGLE_CLIENT_ID=your-oauth2-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret
# Note: Google requires client_secret even for Desktop applications
# GOOGLE_DOCUMENT_ID=your-google-docs-document-id (Optional - will auto-create if not provided)
GOOGLE_DOCUMENT_TITLE=Documentation

# Notion Configuration
NOTION_API_TOKEN=secret_your-notion-integration-token
NOTION_ROOT_PAGE_ID=your-root-page-id-from-notion-url  # Required - Internal Integration cannot create workspace-level pages

# Optional Settings
DOCFLU_EXCLUDE_PATTERNS=*.draft.md,private/**
DOCFLU_CONCURRENT_UPLOADS=5
DOCFLU_RETRY_COUNT=3 